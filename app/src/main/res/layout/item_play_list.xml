<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    tools:layout_width="745dp">

    <ImageView
        android:id="@+id/img_play_item_status"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_current_play"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_play_item_song_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_play_item_song_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/selector_item_tv"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="七里香" />

    <TextView
        android:id="@+id/tv_play_item_song_artists"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@color/selector_item_tv"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_play_item_song_name"
        app:layout_constraintLeft_toRightOf="@id/tv_play_item_song_name"
        tools:text="周杰伦" />

    <TextView
        android:id="@+id/tv_play_item_song_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@color/selector_item_tv"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_play_item_song_name"
        app:layout_constraintLeft_toRightOf="@id/tv_play_item_song_artists"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="4:57" />

</androidx.constraintlayout.widget.ConstraintLayout>